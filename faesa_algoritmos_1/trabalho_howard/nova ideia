                        System.out.print("Nome do " + (i + 1) + "º prédio: ");
                        System.out.print(nomePredios[i]);
                        System.out.println("");
                            for(int j = 0;j<comodos.length;j++){
                            System.out.print("Quantidade de " + comodos[j] + ": ");
